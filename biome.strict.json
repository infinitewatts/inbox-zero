{
  "$schema": "https://biomejs.dev/schemas/2.2.2/schema.json",
  "extends": ["./biome.json"],
  "linter": {
    "rules": {
      "suspicious": {
        "noExplicitAny": "error",
        "noTsIgnore": "error"
      },
      "correctness": {
        "noUnusedImports": "error",
        "noUnusedVariables": "error",
        "noUnusedFunctionParameters": "error",
        "useExhaustiveDependencies": "error"
      }
    }
  }
}
